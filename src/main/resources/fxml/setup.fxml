<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.SetupController">
   <ImageView fitHeight="720.0" fitWidth="1285.0" pickOnBounds="true">
      <Image url="@../png/generic/background_wall.png"/>
   </ImageView>
   <TextField fx:id="nameField" layoutX="420.0" layoutY="146.0">
      <font>
         <Font size="36.0"/>
      </font>
   </TextField>
   <Label id="enterNickname" layoutX="270.0" layoutY="21.0" prefHeight="54.0" prefWidth="742.0"
          text="Enter your nickname" styleClass="enterNickname" alignment="CENTER" textAlignment="CENTER"/>
   <Button fx:id="nameButton" layoutX="584.0" layoutY="243.0" mnemonicParsing="false" onAction="#confirmName"
           text="Confirm">
      <font>
         <Font size="24.0"/>
      </font>
   </Button>
   <ButtonBar layoutX="233.0" layoutY="360.0" prefHeight="40.0" prefWidth="200.0"/>
   <RadioButton layoutX="325.0" layoutY="535.0" mnemonicParsing="false" selected="true" text="1">
      <font>
         <Font size="32.0"/>
      </font>
      <toggleGroup>
         <ToggleGroup fx:id="playerAmountGroup"/>
      </toggleGroup>
   </RadioButton>
   <Label fx:id="firstPlayerText" layoutX="270.0" layoutY="325.0" prefHeight="54.0" prefWidth="742.0"
          text="You are the first player!" styleClass="firstPlayerLabel" alignment="CENTER" textAlignment="CENTER"/>
   <RadioButton layoutX="514.0" layoutY="535.0" mnemonicParsing="false" text="2" toggleGroup="$playerAmountGroup">
      <font>
         <Font size="32.0"/>
      </font>
   </RadioButton>
   <RadioButton layoutX="685.0" layoutY="535.0" mnemonicParsing="false" text="3" toggleGroup="$playerAmountGroup">
      <font>
         <Font size="32.0"/>
      </font>
   </RadioButton>
   <RadioButton layoutX="867.0" layoutY="535.0" mnemonicParsing="false" text="4" toggleGroup="$playerAmountGroup"/>
   <Button fx:id="playerAmountButton" layoutX="584.0" layoutY="620.0" mnemonicParsing="false"
           onAction="#confirmPlayerAmount" text="Confirm">
      <font>
         <Font size="24.0"/>
      </font>
   </Button>
   <Label fx:id="formatError" layoutX="272.0" layoutY="308.0" prefHeight="54.0" prefWidth="742.0"
          text="Please choose a valid username" styleClass="formatError" alignment="CENTER" textAlignment="CENTER"
          textFill="crimson">
      <font>
         <Font size="36.0"/>
      </font>
   </Label>
   <Label fx:id="firstPlayerLabel" layoutX="248.0" layoutY="429.0" prefHeight="54.0" prefWidth="784.0"
          text="First player is selecting the nÂ° of players" styleClass="firstPlayerLabel" alignment="CENTER"
          textAlignment="CENTER"/>
</AnchorPane>
