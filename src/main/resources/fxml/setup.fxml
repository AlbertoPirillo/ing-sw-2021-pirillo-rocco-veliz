<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.SetupController">
   <children>
      <TextField fx:id="nameField" layoutX="420.0" layoutY="146.0">
         <font>
            <Font size="36.0" />
         </font>
      </TextField>
      <Text layoutY="81.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your nickname" textAlignment="CENTER" wrappingWidth="1280.0">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <Button fx:id="nameButton" layoutX="584.0" layoutY="243.0" mnemonicParsing="false" onAction="#confirmName" text="Confirm">
         <font>
            <Font size="24.0" />
         </font></Button>
      <ButtonBar layoutX="233.0" layoutY="360.0" prefHeight="40.0" prefWidth="200.0" />
      <RadioButton layoutX="325.0" layoutY="535.0" mnemonicParsing="false" selected="true" text="1">
         <font>
            <Font size="32.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="playerAmountGroup" />
         </toggleGroup>
      </RadioButton>
      <Text fx:id="firstPlayerText" layoutX="3.0" layoutY="409.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You are the first player! " textAlignment="CENTER" wrappingWidth="1280.0">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <RadioButton layoutX="514.0" layoutY="535.0" mnemonicParsing="false" text="2" toggleGroup="$playerAmountGroup">
         <font>
            <Font size="32.0" />
         </font>
      </RadioButton>
      <RadioButton layoutX="685.0" layoutY="535.0" mnemonicParsing="false" text="3" toggleGroup="$playerAmountGroup">
         <font>
            <Font size="32.0" />
         </font>
      </RadioButton>
      <RadioButton layoutX="867.0" layoutY="535.0" mnemonicParsing="false" text="4" toggleGroup="$playerAmountGroup">
         <font>
            <Font size="32.0" />
         </font>
      </RadioButton>
      <Button fx:id="playerAmountButton" layoutX="584.0" layoutY="620.0" mnemonicParsing="false" onAction="#confirmPlayerAmount" text="Confirm">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label fx:id="formatError" layoutX="272.0" layoutY="305.0" prefHeight="54.0" prefWidth="742.0" text="Please choose a valid username" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label fx:id="firstPlayerLabel" layoutX="248.0" layoutY="451.0" prefHeight="54.0" prefWidth="784.0" text="The first player is selecting the number of players" textAlignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
